<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rule_content_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rule_content_title"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/actionbar"
        android:padding="0dp"
        android:tag="actionBar" >

        <TextView
            android:id="@+id/rule_content_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/button_checked"
            android:drawableLeft="@drawable/ic_action_up_home"
            android:gravity="center|center_horizontal"
            android:text="@string/service_agreement_titile"
            android:textColor="#ffffffff"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rule_content_title"
        android:gravity="center_vertical"
        android:scrollbars="none" >

        <TextView
            android:id="@+id/rule_content_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="16dp" />
    </ScrollView>

</RelativeLayout>