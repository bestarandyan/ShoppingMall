<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecf0f1"
    android:clickable="true"
    android:orientation="vertical"
    android:id="@+id/city_base_layout" >

    <RelativeLayout
        android:id="@+id/city_base_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/actionbar"
        android:padding="0dp"
        android:tag="actionBar" >

        <Button
            android:id="@+id/city_select_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/text_down_selector"
            android:drawableLeft="@drawable/ic_action_up"
            android:gravity="center|center_horizontal"
            android:text="@string/city_select_title"
            android:textColor="#ffffffff"
            android:textSize="22sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/city_select_list"
        android:layout_below="@id/city_base_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#00000000"
        android:divider="#d1d5d8"
        android:dividerHeight="1dp" >
    </ListView>

</RelativeLayout>