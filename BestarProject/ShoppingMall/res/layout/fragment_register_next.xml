<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_next_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/register_background"
    android:clickable="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:background="@color/info_background"
            android:orientation="horizontal"
            android:tag="actionBar"
            tools:ignore="UselessParent" >

            <TextView
                android:id="@+id/register_next_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/text_down_selector"
                android:drawableLeft="@drawable/ic_action_up_home"
                android:gravity="center|center_horizontal"
                android:text="@string/complete_info"
                android:textColor="#ffffffff"
                android:textSize="18sp" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessLeaf" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/again_register_content1"
                    android:textColor="@color/review_content_color1"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent" >

                    <EditText
                        android:id="@+id/real_name"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/textview_selector"
                        android:gravity="center|left"
                        android:hint="@string/real_name"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textSize="16sp"
                        tools:ignore="TextFields" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent" >

                    <EditText
                        android:id="@+id/id_number"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/textview_selector"
                        android:digits="0123456789xX"
                        android:gravity="center|left"
                        android:hint="@string/id_number"
                        android:maxLength="18"
                        android:textSize="16sp"
                        tools:ignore="TextFields,Deprecated" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent" >

                    <Button
                        android:id="@+id/ed_local_city"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/textview_selector"
                        android:gravity="center|left"
                        android:hint="@string/please_choose_city"
                        android:singleLine="true"
                        android:textSize="16sp"
                        tools:ignore="TextFields" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent" >

                    <Button
                        android:id="@+id/work_area_select"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/textview_selector"
                        android:gravity="center|left"
                        android:hint="@string/work_area"
                        android:textSize="16sp"
                        tools:ignore="TextFields" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/again_register_content2"
                    android:textColor="@color/review_content_color1"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent" >

                    <EditText
                        android:id="@+id/invite_code"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/textview_selector"
                        android:gravity="center|left"
                        android:hint="@string/invitation_code"
                        android:textSize="16sp"
                        tools:ignore="TextFields" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/rl_img_id_card"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        tools:ignore="UselessParent" >

                        <ImageView
                            android:id="@+id/img_id_card"
                            android:layout_width="64dp"
                            android:layout_height="44dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="16dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/ic_camera"
                            android:maxHeight="44dp"
                            android:maxWidth="64dp"
                            android:scaleType="centerCrop"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/tv_rephoto_id_card"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16dp"
                            android:gravity="center_vertical"
                            android:text="@string/upload_id_card"
                            android:textColor="#39a3e2"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/line2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="#d1d5d8" />

                    <RelativeLayout
                        android:id="@+id/rl_img_bs_card"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        tools:ignore="UselessParent" >

                        <ImageView
                            android:id="@+id/img_bs_card"
                            android:layout_width="64dp"
                            android:layout_height="44dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="16dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/ic_camera"
                            android:maxHeight="44dp"
                            android:maxWidth="64dp"
                            android:scaleType="centerCrop"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/tv_rephoto_bs_card"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16dp"
                            android:gravity="center_vertical"
                            android:text="@string/upload_bs_card"
                            android:textColor="#39a3e2"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/line4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="#d1d5d8" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent" >

                    <TextView
                        android:id="@+id/agree_deal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/read_agree"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/service_agreement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="@string/service_agreement"
                        android:textColor="@color/camera_text" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    android:background="@drawable/start_selector"
                    android:text="@string/complete_resgiter"
                    android:textColor="#fff" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>